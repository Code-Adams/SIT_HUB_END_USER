<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/goldMedalistImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/purple_100"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/goldMedalistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_below="@id/goldMedalistImage"
                android:text="nameComesHere"
                android:textColor="@color/purple_100"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/title_size2"
                android:textAlignment="center"
                android:fontFamily="@string/regular"/>

            <TextView
                android:id="@+id/goldMedalistUSN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/goldMedalistName"
                android:layout_alignStart="@+id/goldMedalistName"
                android:layout_alignEnd="@+id/goldMedalistName"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Usn Comes Here"
                android:textColor="@color/purple_100"
                android:textStyle="italic"
                android:textSize="@dimen/text_size17" />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>