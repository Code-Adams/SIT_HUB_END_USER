<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="320dp"
        app:cardCornerRadius="5dp"
        android:elevation="200dp"
        app:cardBackgroundColor="#5A4FCF"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:background="#ffffff"
            android:layout_marginTop="2dp"
            android:layout_marginHorizontal="2dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/managerImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_launcher"
                app:civ_border_color="@color/purple_100"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/managerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_below="@id/managerImage"
                android:text="nameComesHere"
                android:textColor="@color/purple_100"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="18sp"
                android:textAlignment="center"
                android:fontFamily="@string/regular"/>

            <TextView
                android:id="@+id/managerPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/managerName"
                android:layout_alignStart="@+id/managerName"
                android:layout_alignEnd="@+id/managerName"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Post Comes Here"
                android:textColor="@color/purple_100"
                android:textStyle="italic"
                android:textSize="@dimen/text_size17" />

            <TextView
                android:id="@+id/visitManagerPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/managerPost"
                android:layout_alignStart="@+id/managerPost"
                android:layout_alignEnd="@+id/managerPost"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textAlignment="center"
                android:text="@string/Visit_Page"
                android:textColor="@color/purple_100"
                android:textStyle="italic"
                android:textSize="@dimen/text_size17" />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>